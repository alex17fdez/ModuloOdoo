<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
        <!-- Action to open To-do Task list -->
        <act_window
            id="action_todo_task"
            name="To-do Task"
            res_model="todo.task"
            view_mode="tree,form"
        />
        <!-- top level menu: no parent -->
        <menuitem
            id="main_menu_todo_task"
            name="To-Do Application"
        />
        <!-- A first level in the left side menu is needed 
before using action= attribute -->
        <menuitem
            id="l1_menu_todo_task"
            name="To-Do Tasks"
            parent="main_menu_todo_task"
        />
        <!-- Menu item to open To-do Task list -->
        <menuitem
            id="menu_todo_task"
            name="To-Do Tasks"
            parent="l1_menu_todo_task"
            action="action_todo_task"
        />

<!-- Vista de listado -->
<record id="view_tree_todo_task" model="ir.ui.view">
    <field name="name">To-do Task Tree</field>
    <field name="model">todo.task</field>
    <field name="arch" type="xml">
        <tree>
            <field name="nombreSocio"/>
            <field name="lugar"/>
            <field name="dia"/>
            <field name="horaInicio"/>
            <field name="horaFin"/>
            <field name="tipoPedido"/>
        </tree>
    </field>
</record>
<!-- Vista de bÃºsqueda -->
<record id="view_filter_todo_task" model="ir.ui.view">
    <field name="name">To-do Task Filter</field>
    <field name="model">todo.task</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <filter name="done" string="Hechas" domain="[('is_done','!=',False)]"/>
        </search>
    </field>
</record>
<!-- Vista de Formulario -->
<record id="view_form_todo_task" model="ir.ui.view">
    <field name="name">To-do Task Form</field>
    <field name="model">todo.task</field>
     <field name="arch" type="xml">
        <form>
            <header>
                <button name="do_marcar" type="object" string="MARCA de prueba" class="oe_highlight" />
                <button name="do_limpiar" type="object" string="Limpiar hechas" />
            </header>
            <sheet>
                <group name="group_top">
                    <group name="group_left">
                        <field name="nombreSocio"/>
                        <field name="lugar"/>
                        <field name="dia"/>
                        <field name="horaInicio"/>
                        <field name="horaFin"/>
                        <field name="tipoPedido"/>
                    </group>
                    <group name="group_right">
                        <field name="is_done"/>
                        <field name="active" readonly="1"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
